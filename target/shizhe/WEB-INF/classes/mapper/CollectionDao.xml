<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.InterestDao">
  <resultMap id="BaseCollectionMap" type="Interest">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="collect_id" jdbcType="INTEGER" property="collectId" />
    <result column="type" jdbcType="INTEGER" property="type" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, collect_id, `type`
  </sql>
  <select id="selectByCondition" parameterType="java.lang.Integer" resultMap="BaseCollectionMap">
    select
    <include refid="Base_Column_List" />
    from collection
    <where>
      1 = 1
      <if test="type != null and type != ''">
        AND `type` = #{type}
      </if>
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from collection
    where id = #{id}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Interest">
    insert into collection ( user_id, collect_id,
      `type`)
    values (#{userId}, #{collectId},
      #{type})
  </insert>
</mapper>