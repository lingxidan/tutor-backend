<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ArticleDao">
  <resultMap id="BaseArticleMap" type="Article">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="establish_dt" jdbcType="DATE" property="establishDt" />
    <result column="author_id" jdbcType="INTEGER" property="authorId" />
    <result column="imgs" jdbcType="VARCHAR" property="imgs" />
    <result column="reason" jdbcType="VARCHAR" property="reason" />
    <result column="result" jdbcType="VARCHAR" property="result" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  <resultMap extends="BaseArticleMap" id="ResultMapWithBLOBs" type="Article">
    <result column="content" jdbcType="LONGVARCHAR" property="content" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, establish_dt, author_id, imgs, reason, `result`,status
  </sql>
  <sql id="Blob_Column_List">
    content
  </sql>
  <select id="selectByCondition" resultMap="BaseArticleMap">
    select
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from article
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND author_id = #{userId}
      </if>
      <if test="keyword != null and keyword != ''">
        AND `title` LIKE '%' || #{keyword} ||'%'
      </if>
      <if test="establishDt != null and establishDt != ''">
        AND establish_dt = #{establishDt}
      </if>
      <if test="status != null and status != ''">
        AND status = #{status}
      </if>
    </where>
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseArticleMap">
    select
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from article
    where id = #{id}
  </select>
  <insert id="insertArticle" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Article">
    insert into article (title, establish_dt,
      author_id, imgs, reason, 
      `result`, content, status)
    values (#{title}, #{establishDt},
      #{authorId}, #{imgs}, #{reason}, 
      #{result}, #{content},#{status})
  </insert>
  <update id="updateArticle" parameterType="shizhe.bean.Article">
    update article
    set title = #{title},
      imgs = #{imgs},
      reason = #{reason},
      `result` = #{result},
      status = #{status},
      content = #{content}
    where id = #{id}
  </update>
</mapper>