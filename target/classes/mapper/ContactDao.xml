<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ContactDao">
  <resultMap id="BaseContactMap" type="Contact">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
  </resultMap>
  <sql id="Base_Column_List">
    id, url, user_id
  </sql>
  <select id="selectByCondition" parameterType="java.lang.Integer" resultMap="BaseContactMap">
    select
    <include refid="Base_Column_List" />
    from contact
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseContactMap">
    select 
    <include refid="Base_Column_List" />
    from contact
    where id = #{id}
  </select>
  <insert id="insertContact" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Contact">
    insert into contact (url, user_id
      )
    values (#{url}, #{userId}
      )
  </insert>
  <update id="updateByUserId" parameterType="shizhe.bean.Contact">
    update contact
    set url = #{url}
    where user_id = #{userId}
  </update>
</mapper>