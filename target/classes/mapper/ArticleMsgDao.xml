<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ArticleMsgDao">
  <resultMap id="BaseArticleMsgMap" type="Comment">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="dt" jdbcType="DATE" property="dt" />
    <result column="article_id" jdbcType="INTEGER" property="mainId" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="msg" jdbcType="LONGVARCHAR" property="msg" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, dt, article_id, `status`,msg
  </sql>
  <select id="selectByCondition" parameterType="java.lang.Integer" resultMap="BaseArticleMsgMap">
    select
    <include refid="Base_Column_List" />
    from article_msg
    <where>
      1 = 1
      <if test="mainId != null and mainId != ''">
        AND article_id = #{mainId}
      </if>
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
  </select>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseArticleMsgMap">
    select 
    <include refid="Base_Column_List" />
    from article_msg
    where id = #{id}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from article_msg
    where id = #{id}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Comment">
    insert into article_msg (user_id, dt, 
      article_id, `status`, msg
      )
    values (#{userId}, #{dt}, 
      #{mainId}, #{status}, #{msg}
      )
  </insert>
  <update id="updateMsg" parameterType="shizhe.bean.Comment">
    update article_msg
    set user_id = #{userId},
      dt = #{dt},
      article_id = #{mainId},
      `status` = #{status},
      msg = #{msg}
    where id = #{id}
  </update>
</mapper>