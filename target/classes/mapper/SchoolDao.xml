<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.SchoolDao">
  <resultMap id="BaseSchoolMap" type="School">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="CHAR" property="name" />
    <result column="address" jdbcType="CHAR" property="address" />
    <result column="address_name" jdbcType="VARCHAR" property="addressName" />
    <result column="education" jdbcType="CHAR" property="education" />
    <result column="descr" jdbcType="CHAR" property="descr" />
    <result column="imgs" jdbcType="CHAR" property="imgs" />
    <result column="establish_dt" jdbcType="DATE" property="establishDt" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="scale" jdbcType="CHAR" property="scale" />
    <result column="reason" jdbcType="CHAR" property="reason" />
    <result column="result" jdbcType="CHAR" property="result" />
  </resultMap>
  <sql id="Base_Column_List">
    id, `name`, address, address_name, education, descr, imgs, establish_dt, user_id, `status`,
    `scale`, reason, `result`
  </sql>
  <select id="selectByCondition" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
      <if test="scale != null and scale != ''">
        AND `scale` = #{scale}
      </if>
      <if test="address != null and address != ''">
        AND address = #{address}
      </if>
      <if test="keyword != null and keyword != ''">
        AND `name` LIKE '%' || #{keyword} ||'%'
      </if>
      <if test="status != null and status != ''">
        AND status = #{status}
      </if>
    </where>
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseSchoolMap">
    select 
    <include refid="Base_Column_List" />
    from school
    where id = #{id}
  </select>
  <select id="selectByScale" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where `scale` = #{scale}
  </select>
  <select id="selectByAddr" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where address = #{address}
  </select>
  <select id="selectByName" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where `name` LIKE '%' || #{name} ||'%'
  </select>
  <select id="selectByStatus" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where status = #{status}
  </select>
  
  <!--<delete id="deleteSchool" parameterType="java.lang.Integer">-->
    <!--delete from school-->
    <!--where id = #{id}-->
  <!--</delete>-->
  <insert id="insertSchool" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.School">
    insert into school (`name`, address,address_name,
      education, descr, imgs, establish_dt, 
      user_id, `status`, `scale`, 
      reason, `result`)
    values (#{name}, #{address},#{addressName},
      #{education}, #{descr}, #{imgs}, #{establishDt}, 
      #{userId}, #{status}, #{scale}, 
      #{reason}, #{result})
  </insert>
  <update id="updateSchool" parameterType="shizhe.bean.School">
    update school
    set `name` = #{name},
      address = #{address},
      address_name = #{addressName},
      education = #{education},
      descr = #{descr},
      imgs = #{imgs},
      establish_dt = #{establishDt},
      user_id = #{userId},
      `status` = #{status},
      `scale` = #{scale},
      reason = #{reason},
      `result` = #{result}
    where id = #{id}
  </update>
  <delete id="deleteSchool" parameterType="java.lang.Integer">
    delete from school
    where id = #{id}
  </delete>
</mapper>