<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.VolunteerDao">
  <resultMap id="BaseResultMap" type="shizhe.bean.Volunteer">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="education" jdbcType="CHAR" property="education" />
    <result column="work_startdt" jdbcType="DATE" property="workStartdt" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="certificate" jdbcType="INTEGER" property="certificate" />
    <result column="descr" jdbcType="CHAR" property="descr" />
    <result column="reason" jdbcType="CHAR" property="reason" />

    <result column="name" jdbcType="CHAR" property="name" />
    <result column="password" jdbcType="CHAR" property="password" />
    <result column="idcard" jdbcType="CHAR" property="idcard" />
    <result column="phone" jdbcType="CHAR" property="phone" />
    <result column="email" jdbcType="CHAR" property="email" />
    <result column="address" jdbcType="CHAR" property="address" />
  </resultMap>
  <sql id="Base_Column_List">
    id, `name`, password,idcard,phone,email,address
    education, work_startdt, `status`, user_id, certificate, descr, reason
  </sql>
  <select id="getVolunteer" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    a.id as id, `name`, password,idcard,phone,email,b.address as address,
    education, work_startdt, `status`, user_id, certificate, descr, reason
    from volunteer a
    LEFT JOIN `user` b on a.user_id=b.id
    having a.user_id=#{userId}
  </select>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from volunteer
    where id = #{id}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from volunteer
    where id = #{id}
  </delete>
  <insert id="registe" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Volunteer">
    insert into volunteer (education, work_startdt,
      `status`, user_id, certificate, 
      descr, reason)
    values (#{education}, #{workStartdt},
      #{status}, #{userId}, #{certificate}, 
      #{descr}, #{reason})
  </insert>
  <update id="edit" parameterType="shizhe.bean.Volunteer">
    update volunteer
    set education = #{education},
      work_startdt = #{workStartdt},
      `status` = #{status},
      certificate = #{certificate},
      descr = #{descr},
      reason = #{reason}
    where id = #{id}
  </update>
</mapper>