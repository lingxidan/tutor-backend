<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.FileDao">
  <resultMap id="BaseFileMap" type="ResumeFile">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="filePath" jdbcType="VARCHAR" property="filepath" />
    <result column="up_dt" jdbcType="DATE" property="upDt" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    id, `name`, filePath, up_dt, user_id, `status`
  </sql>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseFileMap">
    select 
    <include refid="Base_Column_List" />
    from resume_file
    where id = #{id}
  </select>
  <select id="selectByCondition" resultMap="BaseFileMap">
    select
    <include refid="Base_Column_List" />
    from resume_file
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
      <if test="upDt != null and upDt != ''">
        AND up_dt = #{upDt}
      </if>
    </where>
  </select>
  <insert id="insertFile" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.ResumeFile">
    insert into resume_file (`name`, filePath,
      up_dt, user_id, `status`)
    values (#{name}, #{filepath},
      #{upDt}, #{userId}, #{status})
  </insert>
  <update id="updateFile" parameterType="shizhe.bean.ResumeFile">
    update resume_file
    set `status` = #{status}
    where id = #{id}
  </update>
  <delete id="deleteFile" parameterType="java.lang.Integer">
    delete from resume_file
    where id = #{id}
  </delete>
</mapper>