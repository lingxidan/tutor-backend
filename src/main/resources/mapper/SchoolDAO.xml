<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.SchoolDAO">
  <resultMap id="BaseSchoolMap" type="shizhe.bean.School">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="address_name" jdbcType="VARCHAR" property="addressName" />
    <result column="education" jdbcType="VARCHAR" property="education" />
    <result column="imgs" jdbcType="LONGVARCHAR" property="imgs" />
    <result column="establish_dt" jdbcType="DATE" property="establishDt" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="descr" jdbcType="LONGVARCHAR" property="descr" />
  </resultMap>
  <sql id="Base_Column_List">
    id, `name`, address, address_name, education, imgs, establish_dt, user_id, `status`, descr
  </sql>
  <select id="selectByCondition" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
      <if test="address != null and address != ''">
        AND address = #{address}
      </if>
      <if test="keyword != null and keyword != ''">
        AND `name` LIKE CONCAT(CONCAT('%', #{keyword}), '%')
      </if>
      <if test="status != null and status != ''">
        AND status = #{status}
      </if>
    </where>
    order by id desc
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseSchoolMap">
    select 
    <include refid="Base_Column_List" />
    from school
    where id = #{id}
  </select>
  <select id="selectByScale" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
  </select>
  <select id="selectByAddr" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where address = #{address}
  </select>
  <select id="selectByName" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where `name` LIKE '%' || #{name} ||'%'
  </select>
  <select id="selectByStatus" resultMap="BaseSchoolMap">
    select
    <include refid="Base_Column_List" />
    from school
    where status = #{status}
  </select>
  
  <!--<delete id="deleteSchool" parameterType="java.lang.Integer">-->
    <!--delete from school-->
    <!--where id = #{id}-->
  <!--</delete>-->
  <insert id="insertSchool" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.School">
    insert into school (`name`, address,
      address_name, education, imgs,
      establish_dt, user_id, `status`,
      descr)
    values (#{name}, #{address},
      #{addressName}, #{education}, #{imgs},
      #{establishDt}, #{userId}, #{status},
      #{descr})
  </insert>
  <update id="updateSchool" parameterType="shizhe.bean.School">
    update school
    set `name` = #{name},
      address = #{address},
      address_name = #{addressName},
      education = #{education},
      descr = #{descr},
      imgs = #{imgs},
      establish_dt = #{establishDt},
      user_id = #{userId},
      `status` = #{status}
    where id = #{id}
  </update>
  <delete id="deleteSchool" parameterType="java.lang.Integer">
    delete from school
    where id = #{id}
  </delete>
</mapper>