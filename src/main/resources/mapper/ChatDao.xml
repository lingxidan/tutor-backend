<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ChatDAO">
  <resultMap id="BaseChatMap" type="shizhe.bean.Chat">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="from_id" jdbcType="INTEGER" property="fromId" />
    <result column="to_id" jdbcType="INTEGER" property="toId" />
    <result column="dt" javaType="java.util.Date" jdbcType="TIMESTAMP" property="dt" />
    <result column="content" jdbcType="LONGVARCHAR" property="content" />
  </resultMap>
  <sql id="Base_Column_List">
    id, from_id, to_id, dt, content
  </sql>
  <sql id="Blob_Column_List">
    content
  </sql>
  <select id="selectFromChat" resultMap="BaseChatMap">
    select
    <include refid="Base_Column_List" />
    from chat
    where (to_id = #{userId} OR from_id = #{userId}) AND dt > #{dt}
    order by dt;
  </select>
  <select id="selectAllChat" resultMap="BaseChatMap">
    select
    <include refid="Base_Column_List" />
    from chat
    where to_id = #{userId} OR from_id = #{userId}
    order by dt;
  </select>
  <insert id="insertChat" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Chat">
    insert into chat (from_id, to_id,
      dt, content)
    values (#{fromId}, #{toId},
      #{dt}, #{content})
  </insert>
</mapper>