<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ArticleMsgDAO">
  <resultMap id="BaseArticleMsgMap" type="shizhe.bean.ArticleMsg">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="dt" javaType="java.util.Date" jdbcType="TIMESTAMP" property="dt" />
    <result column="article_id" jdbcType="INTEGER" property="articleId" />
    <result column="msg" jdbcType="LONGVARCHAR" property="msg" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, dt, article_id, msg
  </sql>
  <sql id="Blob_Column_List">
    msg
  </sql>
  <select id="selectByCondition" parameterType="java.lang.Integer" resultMap="BaseArticleMsgMap">
    select
    <include refid="Base_Column_List" />
    from article_msg
    <where>
      1 = 1
      <if test="mainId != null and mainId != ''">
        AND article_id = #{mainId}
      </if>
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
    order by id desc
  </select>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseArticleMsgMap">
    select
    <include refid="Base_Column_List" />
    from article_msg
    where id = #{id}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from article_msg
    where id = #{id}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.ArticleMsg">
    insert into article_msg (user_id, dt,
      article_id, msg
      )
    values (#{userId}, #{dt},
      #{articleId}, #{msg}
      )
  </insert>
</mapper>