<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.AttentionDAO">
  <resultMap id="BaseResultMap" type="shizhe.bean.Attention">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="collect_id" jdbcType="INTEGER" property="collectId" />
    <result column="collect_type" jdbcType="INTEGER" property="collectType" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, collect_id, collect_type
  </sql>
  <select id="selectByCondition" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from attention
    <where>
      1 = 1
      <if test="collectId != null and collectId != ''">
        AND collect_id = #{collectId}
      </if>
      <if test="collectType != null and collectType != ''">
        AND collect_type = #{collectType}
      </if>
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
    order by id desc
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from attention
    where id = #{id}
  </delete>
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Attention">
    insert into attention ( user_id, collect_id,
      `collect_type`)
    values (#{userId}, #{collectId},
      #{collectType})
  </insert>
</mapper>