  <select id="getRecruiter" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select
    a.id as id,identify,user_id,reason,
    `name`, `password`,idcard,phone,email,b.address as address
    from recruiter a
    LEFT JOIN `user` b on a.user_id=b.id
    having a.user_id=#{userId}
  </select>
