<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.ExperienceDAO">
  <resultMap id="BaseExperienceMap" type="shizhe.bean.Experience">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="company_name" jdbcType="VARCHAR" property="companyName" />
    <result column="start_dt" jdbcType="DATE" property="startDt" />
    <result column="end_dt" jdbcType="VARCHAR" property="endDt" />
    <result column="depart_name" jdbcType="VARCHAR" property="departName" />
    <result column="job_name" jdbcType="VARCHAR" property="jobName" />
    <result column="task" jdbcType="LONGVARCHAR" property="task" />
    <result column="performance" jdbcType="LONGVARCHAR" property="performance" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
  </resultMap>
  <sql id="Base_Column_List">
    id, company_name, start_dt, end_dt, depart_name, job_name, task, performance, user_id
  </sql>
  <select id="selectByCondition" resultMap="BaseExperienceMap">
    select
    <include refid="Base_Column_List" />
    from experience
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND user_id = #{userId}
      </if>
    </where>
    order by id desc
  </select>
  <insert id="insertExperience" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Experience">
    insert into experience (company_name, start_dt,
      end_dt, depart_name, job_name,
      user_id, task, performance
      )
    values (#{companyName}, #{startDt},
      #{endDt}, #{departName}, #{jobName},
      #{userId}, #{task}, #{performance}
      )
  </insert>
  <update id="updateExperience" parameterType="shizhe.bean.Experience">
    update experience
    set company_name = #{companyName},
      start_dt = #{startDt},
      end_dt = #{endDt},
      depart_name = #{departName},
      job_name = #{jobName},
      task = #{task},
      performance = #{performance}
    where id = #{id}
  </update>
  <delete id="deleteById" parameterType="java.lang.Integer">
    delete from experience
    where id = #{id}
  </delete>
</mapper>