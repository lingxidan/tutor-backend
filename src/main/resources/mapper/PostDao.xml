<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.PostDao">
  <resultMap id="BasePostMap" type="Post">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="establish_dt" jdbcType="DATE" property="establishDt" />
    <result column="author_id" jdbcType="INTEGER" property="authorId" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <result column="imgs" jdbcType="VARCHAR" property="imgs" />
    <result column="reason" jdbcType="VARCHAR" property="reason" />
    <result column="result" jdbcType="VARCHAR" property="result" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, establish_dt, author_id, content, imgs, reason, `result`, `status`
  </sql>
  <select id="selectByCondition" resultMap="BasePostMap">
    select
    <include refid="Base_Column_List" />
    from post
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND author_id = #{userId}
      </if>
      <if test="keyword != null and keyword != ''">
        AND `title` LIKE '%' || #{keyword} ||'%'
      </if>
      <if test="establishDt != null and establishDt != ''">
        AND establish_dt = #{establishDt}
      </if>
      <if test="status != null and status != ''">
        AND status = #{status}
      </if>
    </where>
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BasePostMap">
    select
    <include refid="Base_Column_List" />
    from post
    where id = #{id}
  </select>
  <insert id="insertPost" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Post">
    insert into post (title, establish_dt, 
      author_id, content, imgs, 
      reason, `result`, `status`
      )
    values (#{title}, #{establishDt}, 
      #{authorId}, #{content}, #{imgs}, 
      #{reason}, #{result}, #{status}
      )
  </insert>
  <update id="updatePost" parameterType="shizhe.bean.Post">
    update post
    set title = #{title},
      content = #{content},
      imgs = #{imgs},
      reason = #{reason},
      `result` = #{result},
      `status` = #{status}
    where id = #{id}
  </update>
</mapper>