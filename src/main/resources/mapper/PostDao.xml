<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shizhe.dao.PostDAO">
  <resultMap id="BasePostMap" type="shizhe.bean.Post">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="establish_dt" jdbcType="DATE" property="establishDt" />
    <result column="author_id" jdbcType="INTEGER" property="authorId" />
    <result column="content" jdbcType="LONGVARCHAR" property="content" />
    <result column="imgs" jdbcType="LONGVARCHAR" property="imgs" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, establish_dt, author_id, content, imgs
  </sql>
  <select id="selectByCondition" resultMap="BasePostMap">
    select
    <include refid="Base_Column_List" />
    from post
    <where>
      1 = 1
      <if test="userId != null and userId != ''">
        AND author_id = #{userId}
      </if>
      <if test="keyword != null and keyword != ''">
        AND title LIKE CONCAT(CONCAT('%', #{keyword}), '%')
      </if>
      <if test="establishDt != null and establishDt != ''">
        AND establish_dt = #{establishDt}
      </if>
    </where>
    order by id desc
  </select>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BasePostMap">
    select
    <include refid="Base_Column_List" />
    from post
    where id = #{id}
  </select>

  <delete id="deletePost" parameterType="java.lang.Integer">
    delete from post
    where id = #{id}
  </delete>
  <insert id="insertPost" useGeneratedKeys="true" keyProperty="id" parameterType="shizhe.bean.Post">
    insert into post (title, author_id,
      content, imgs, establish_dt
      )
    values (#{title}, #{authorId},
      #{content}, #{imgs}, #{establishDt}
      )
  </insert>
  <update id="updatePost" parameterType="shizhe.bean.Post">
    update post
    set title = #{title},
      content = #{content},
      imgs = #{imgs}
    where id = #{id}
  </update>
</mapper>